<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 
		lazy-init      : 객체 생성 시점(true, false)
		scope          : 객체 생성 범위 (singleton, prototype, request, session)
		init-method    : 생성 동작
		destroy-method : 소멸 동작
	 -->
	<bean id="gr" class="spring01.Greeting" 
		lazy-init="false" scope="singleton" init-method="initObj" destroy-method="destObj"></bean>
		
</beans>
